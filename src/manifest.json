{
  "name": "FT Analytics",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "The FT Analytics Chrome Extension.",

  "icons": {
    "16":   "images/logo-16.png",
    "48":   "images/logo-48.png",
    "128":  "images/logo-128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "webRequest",

    "https://realtime.ijento.com/*",

    "http://stats.ft.com/si/*",
    "http://statstest.ft.com/si/*",

    "http://ft.com/",
    "http://www.ft.com/*",
    "http://*.aboutus.ft.com/",
    "http://app.ft.com/*",
    "http://*.local.ft.com/*",
    "http://*.rankings.ft.com/*",
    "http://*.search.ft.com/*",
    "http://*.ftalphaville.ft.com/*",
    "http://*.video.ft.com/*",
    "http://*.howtospendit.ft.com/*",
    "http://*.labs.ft.com/*",
    "http://*.podcast.ft.com/*"
  ],

  "background": {
    "page": "background.html"
  },

  "page_action": {
    "default_icon": "images/logo-16.grey.png",
    "default_title": "FT Tracking",
    "default_popup": "popup.html"
  },

  "update_url": "https://sites.google.com/a/ft.com/web-analytics-new/tools/chrome-extension/updates.xml"
}
