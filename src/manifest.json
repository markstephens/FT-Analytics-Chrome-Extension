{
    "name": "FT Tracking",
    "version": "0.1",
    "manifest_version": 2,
    "description": "The FT tracking extension.",

    "icons": {
        "16":   "images/logo-16.png",
        "48":   "images/logo-48.png",
        "128":  "images/logo-128.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "http://stats.ft.com/si/*",
        "http://statstest.ft.com/si/*",
        "http://ft.com/",
        "http://www.ft.com/*",
        "http://search.ft.com/*",
        "http://howtospendit.ft.com/*"
    ],

    "background": {
        "page": "background.html"
    },

    "page_action": {
        "default_icon": "images/logo-16.grey.png",
        "default_title": "FT Tracking",
        "default_popup": "popup.html"
    }
}